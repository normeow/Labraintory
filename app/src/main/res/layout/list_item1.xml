<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/subj_icon_width"
        android:layout_height="@dimen/subj_icon_height"
        android:id="@+id/icon_imview"
        android:src="@drawable/physics"/>

    <TextView
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon_imview"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_subname"
        android:text="Physics"/>



</RelativeLayout>